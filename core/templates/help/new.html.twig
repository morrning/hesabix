{% extends 'base.html.twig' %}

{% block title %}افزودن یا ویرایش راهنما {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 px-0">
                {{ form_start(form,{'attr':{'class':'ajax-off'}}) }}
                {{ form_row(form.title) }}
                {{ form_row(form.url) }}
                {{ form_row(form.cat) }}
                {{ form_row(form.body) }}
                {{ form_widget(form.submit) }}
                <a href="{{ path('home') }}" class="btn btn-secondary">انصراف</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
