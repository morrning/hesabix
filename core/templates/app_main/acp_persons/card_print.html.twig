{% extends "app_main/pdf/base.html.twig" %}
{% block body %}
    <table style="border-color: black; float: right;" border="1";><caption>&nbsp;</caption>
        <tbody>
        <tr style="text-align: center; background-color: grey; color: white">
            <td style="width: 35px;">ردیف</td>
            <th>تاریخ</th>
            <th>بدهکار</th>
            <th>بستانکار</th>
            <th>شرح</th>
        </tr>
        {% for data in datas %}
            <tr style="text-align: center">
                <td>{{ loop.index }}</td>
                <td>{{ data.file.date }}</td>
                <td>{{ data.bd | number_format}}</td>
                <td>{{ data.bs | number_format}}</td>
                <td>{{ data.des }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}