{% extends 'base.html.twig' %}

{% block title %}پروفایل کاربری{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-4 mb-2">
                <div class="card mb-2">
                    <div class="card-header bg-primary text-light">
                        <i class="bi bi-person"></i>
                        {{ app.user.name }}
                    </div>
                    <div class="card-body">
                        <img class="rounded float-start" style="height: 80px;" src="{{ asset('https://www.gravatar.com/avatar/' ~ twigFunctions.gravatarHash(app.user.email)) }}" alt="">
                        <ul class="float-start">
                            <li>
                                <a href="{{ path('app_main') }}">
                                    تعداد کسب‌و‌کارها:
                                    {{ business | length }}
                                </a>
                            </li>
                            <li>
                                نوع اکانت:
                                <span class="text-success">
                                    {% if app.user.adsBan %}
                                        سطح ۱ - بدون تبلیغات
                                    {% else %}
                                        رایگان! برای همیشه
                                    {% endif %}
                                </span>
                            </li>
                            <li>
                                تاریخ عضویت:
                                <span class="text-success">{{ Jdate.jdate('d/F/Y',app.user.dateSubmit) }}</span>
                            </li>
                            {% if app.user.adsBan %}
                            <li>
                                اعتبار باقی‌مانده:
                                <span class="text-success">{{ twigFunctions.dayToNow(app.user.adsBanExpire) }}  </span>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        امکانات
                    </a>
                    {% if app.user.adsBan == false %}
                        <a href="{{ path('app_remove_ads') }}" class="list-group-item list-group-item-action">پنهان کردن تبلیغات</a>
                    {% endif %}
                    <a href="{{ path('app_user_buy_history') }}" class="list-group-item list-group-item-action">سوابق خرید</a>
                </div>
            </div>
            <div class="col-sm-12 col-md-8">
                {% if app.user.adsBan == false %}
                    <div id="pos-article-display-69287"></div>
                {% endif %}
                <div class="card">
                    <div class="card-header bg-light">
                        <i class="bi bi-person-check"></i>
                        اطلاعات کاربری
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-2">
                            <label for="exampleInputEmail1">پست الکترونیکی</label>
                            <input disabled="disabled" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ app.user.email }}">
                            <small id="emailHelp" class="form-text text-muted">برای تغییر پست الکترونیکی با پشتیبانی تماس بگیرید.</small>
                        </div>
                        {{ form_start(form) }}
                        {{ form_end(form) }}
                    </div>
                    <div class="card-footer">
                        برای تغییر تصویر نمایه خود به سایت
                        <a href="https://fa.gravatar.com">گراواتار</a>
                         مراجعه نمایید.این تصویر نزد ما ذخیره نمی‌شود.
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}