{% extends 'base.html.twig' %}

{% block title %}ورود کاربران{% endblock %}

{% block body %}
    <div class="container px-md-5">
        <div class="container px-md-5 my-3 bg-white">
            <div class="row align-items-center justify-content-center rounded-5">
                <div class="col-lg-8 col-sm-12 py-3 border shadow-lg">
                    <p class="mb-4">
                        <i class="bi bi-door-open me-2"></i>
                    ورود به حسابیکس
                    </p>
                    {% if msg == 'success' %}
                        <div class="alert alert-success alert-dismissible fade show">
                            <strong>تبریک! </strong>  عضویت شما تکمیل شد. می‌توانید با اطلاعات حساب کاربری خود وارد شوید.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}
                    {% if msg == '2' %}
                        <div class="alert alert-success alert-dismissible fade show">
                            کلمه عبور تغییر یافت.هم اکنون می توانید وارد شوید.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post" class="ajax-off">
                        <div class="form-floating my-2">
                            <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="name@example.com">
                            <label for="floatingInput">پست الکترونیکی</label>
                        </div>
                        <div class="form-floating my-2">
                            <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                            <label for="floatingPassword">کلمه عبور</label>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <p class="text-end pe-2 py-0 my-0">
                            <a class="btn btn-link" href="{{ path('app_user_forget_password') }}"> فراموشی کلمه عبور</a>
                        </p>
                        <div class="d-grid gap-2">
                            <button class="btn btn-lg btn-primary" type="submit">
                                <i class="bi bi-door-open"></i>
                                ورود به حسابیکس
                            </button>
                        </div>
                        <div class="mt-3 text-start">
                            <span class="mt-3">حساب کاربری ندارید؟</span>
                            <a href="{{ path('app_register') }}" class="btn btn-sm btn-success">
                                {% trans %}Register{% endtrans %}
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}